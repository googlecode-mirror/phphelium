* ---------------------------------------------------------------------
* FILE: email.tmp
* Email-specific template
* ---------------------------------------------------------------------

<tmp:header>
<div style='color:#FA4100; font-family:Arial,Helvetica,sans-serif; font-size:1.4em;'>{$title}</div>
    <div style='margin:1em 0 0 0; padding:1em 0 0 0; border-top:1px dotted silver;'>
</tmp:header>

<tmp:footer>
    <br />
    <br />
    {$LANG[sincerely]},<br />
    <br />
    {$title}<br />
    {$email}<br />
    {$phone}<br />
    <a href="{$uri}">{$uri}</a>
</div>
</tmp:footer>

<tmp:default>
{$header}
{$content}
{$footer}
</tmp:default>